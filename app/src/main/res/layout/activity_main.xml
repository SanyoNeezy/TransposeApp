<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="199dp"
        android:layout_height="49dp"
        android:text="Add Chord"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="131dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="104dp"
        android:layout_height="43dp"
        android:text="Delete"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="263dp"
        tools:layout_editor_absoluteY="135dp" />

    <TextView
        android:id="@+id/textViewUserInput"
        android:layout_width="335dp"
        android:layout_height="74dp"
        android:text="Your Chord Progression"
        android:textSize="24dp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="221dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewSuggestion"
        android:layout_width="335dp"
        android:layout_height="400dp"
        android:text="Try this:"
        android:textSize="24dp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="307dp"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinnerRootNote"
        android:layout_width="186dp"
        android:layout_height="29dp"
        android:layout_marginTop="76dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="32dp"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinnerChordType"
        android:layout_width="106dp"
        android:layout_height="25dp"
        tools:layout_editor_absoluteX="261dp"
        tools:layout_editor_absoluteY="80dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>